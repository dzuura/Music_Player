<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_title"
        android:layout_alignBottom="@+id/txt_title"
        android:src="@drawable/baseline_arrow_back"
        android:layout_marginStart="18dp"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:text="@string/music_name"
        android:textSize="24sp"
        android:textColor="#FFDB00"/>

    <ImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_title"
        android:layout_alignBottom="@+id/txt_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/baseline_more_vert"/>

    <ImageView
        android:id="@+id/img_band"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/txt_title"
        android:layout_marginTop="75dp"
        android:src="@drawable/SID"/>

    <SeekBar
        android:id="@+id/slider"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_band"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:outlineProvider="background"
        android:progressBackgroundTint="#FFDB00"
        android:progressBackgroundTintMode="screen"
        android:progressTint="#FFDB00"
        android:thumbTint="#D9D9D9"/>

    <ImageView
        android:id="@+id/slider_thumb"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_below="@+id/img_band"
        android:layout_marginStart="73dp"
        android:layout_marginTop="35.5dp"
        android:src="@drawable/custom_thumb" />

    <TextView
        android:id="@+id/txt_band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/slider"
        android:layout_centerHorizontal="true"
        android:text="@string/band_name"
        android:textSize="20sp"
        android:textColor="#FF8F00"/>

    <TextView
        android:id="@+id/txt_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txt_band"
        android:layout_centerHorizontal="true"
        android:text="@string/music_name"
        android:textSize="20sp"
        android:textColor="#FFDB00"/>

    <ImageView
        android:id="@+id/skip_previous"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/txt_music"
        android:layout_marginTop="75dp"
        android:layout_marginStart="75dp"
        android:src="@drawable/baseline_skip_previous"
        android:backgroundTint="@color/white"/>

    <ImageView
        android:id="@+id/play_bc"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/txt_music"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_play_circle"/>

    <ImageView
        android:id="@+id/play_arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txt_music"
        android:layout_marginTop="76dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_play_arrow"/>

    <ImageView
        android:id="@+id/skip_next"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/txt_music"
        android:layout_marginTop="75dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:src="@drawable/baseline_skip_next"/>

</RelativeLayout>